<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right|top"
    tools:context=".MainActivity"
    tools:ignore="Orientation">
<!--    Cltr + space: nhắc code, gợi ý-->
<!--    Control + /: rào 1 dòng-->
<!--    Control+Shift+/: rào 1 khối-->
<!--    Alt + Enter: import thư viện khi bị lỗi, trỏ vào vùng lỗi và nhấn tổ hợp phím-->
<!--    Cltr + Alt + l: format code-->
<!--    - kích thước: sp ( cố định, không bị vỡ) dp ( co giãn)-->
<!--    alt + Enter: import thư vien-->
    <TextView
        android:layout_gravity="center"
        android:textSize="30sp"
        android:text="Test"
        android:background="#9EFFC107"
        android:layout_width="160dp"
        android:layout_height="145dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>